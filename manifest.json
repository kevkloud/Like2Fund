{
  "manifest_version": 2,

  "name": "Like2Fund",
  "version": "1.0",
  "description": "Like2Fund",
  
  "background": {
    "scripts": [
      "jquery/jquery.min.js",
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "globe.png",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "activeTab",
    "background",
    "tabs"
  ]
}
