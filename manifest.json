{
  "manifest_version": 2,

  "name": "Like2Fund",
  "version": "1.0",
  "description": "Like2Fund",
  "options_page": "account/index.html",
  
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },

  "background": {
    "scripts": [
      "jquery/jquery.min.js",
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup/popup.html"
  },

  "content_security_policy": "script-src 'self' https://cdn.firebase.com 
  https://*.firebaseio.com; object-src 'self'",

  "permissions": [
    "activeTab",
    "background",
    "tabs",
    "https://ajax.googleapis.com/"
  ],

  "web_accessible_resources": [
    "jquery/css/images/ui-bg_inset-hard_100_fcfdfd_1x100.png",
    "jquery/css/images/ui-icons_056b93_256x240.png",
    "jquery/css/images/ui-icons_d8e7f3_256x240.png",
    "jquery/css/jquery-ui.custom.css",
    "jquery/css/override-page.css"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "css": ["lib/fbStyle.css"],
      "js": ["lib/jquery-2.2.2.js", "lib/fbScript.js"],
      "run_at" : "document_end"
    }
  ]
}
